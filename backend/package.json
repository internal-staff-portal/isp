{
  "name": "backend",
  "version": "0.0.0",
  "main": "dist/index.js",
  "repository": "https://github.com/internal-staff-portal/isp.git",
  "author": "Laurenz1606 <laurenz.rausche@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build:compile": "yarn dev:format && yarn build:clean && tsc",
    "build:copy": "rimraf ../bundle/backend/* && recursive-copy dist ../bundle/backend/dist && recursive-copy package.json ../bundle/backend/package.json",
    "build:clean": "rimraf dist",
    "build:full": "yarn build:compile && yarn build:copy && yarn build:clean",
    "dev:start": "NODE_ENV=development DEBUG=1 ts-node-dev --respawn --watch .env src/index.ts",
    "dev:format": "cd .. && yarn format:backend",
    "dev:reinstall": "rimraf node_modules yarn.lock && yarn install"
  },
  "dependencies": {
    "@laurenz1606/logger": "^3.1.2",
    "dotenv": "^16.0.3",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.14",
    "@types/node": "^18.11.9",
    "recursive-copy-cli": "^1.0.20",
    "rimraf": "^3.0.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.3"
  }
}
